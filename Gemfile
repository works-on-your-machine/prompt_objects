# frozen_string_literal: true

source "https://rubygems.org"

# Core
gem "ruby-openai", "~> 7.0"      # OpenAI API client
gem "front_matter_parser"        # YAML frontmatter parsing
gem "mcp"                        # Model Context Protocol server

# TUI (Charm Ruby ports by Marco Roth)
gem "bubbletea"                  # Elm-inspired TUI framework
gem "lipgloss"                   # Terminal styling
gem "bubbles"                    # Pre-built components (spinners, inputs)
gem "glamour"                    # Markdown rendering
gem "huh", github: "marcoroth/huh-ruby"  # Interactive forms

# Development
group :development do
  gem "rubocop", require: false
  gem "debug"
end
